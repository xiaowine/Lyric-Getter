<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:padding="1dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/focustextView"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:maxWidth="258dp"
        android:breakStrategy="high_quality"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:maxLines="5"
        android:textSize="20sp"
        android:text="@string/app_name"
        android:layout_toStartOf="@id/focusimageView"
        tools:ignore="InefficientWeight,ObsoleteLayoutParam,RelativeOverlap" />

    <ImageView
        android:id="@+id/focusimageView"
        android:layout_width="50dp"
        android:minWidth="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_toStartOf="@id/focustextView"
        android:importantForAccessibility="auto"
        app:srcCompat="@drawable/lycaon_icon"
        tools:ignore="ContentDescription,NotSibling,ObsoleteLayoutParam" />

</LinearLayout>
